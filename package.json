{
    "name": "streamglass",
    "version": "1.0.0",
    "description": "Streaming utilities for Twitch/OBS",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "concurrently --names \"frontend,server,desktop,tsc-watcher\" --prefix-colors \"cyan,magenta,green,blue\" \"npm run dev --workspace=frontend\" \"npm run start:socket-io --workspace=server\" \"npm run start --workspace=desktop\" \"npm run tsc:build:watch\"",
        "start-frontend": "npm run dev --workspace=frontend",
        "start-backend": "npm run start:socket-io --workspace=server",
        "start-desktop": "npm run start --workspace=desktop",
        "format": "npm run prettier --workspaces --if-present -- --write",
        "format-check": "npm run prettier --workspaces --if-present -- --check",
        "lint": "npx eslint --config eslint.config.mjs . && npm run lint --workspaces --if-present",
        "lint-fix": "npx eslint --config eslint.config.mjs . --fix && npm run lint --workspaces --if-present -- --fix",
        "tsc": "npm run tsc --workspaces --if-present",
        "tsc:build": "npm run tsc:build --workspaces --if-present",
        "tsc:build:watch": "npm run tsc:build:watch --workspaces --if-present",
        "test": "npm run test --workspaces --if-present",
        "build": "npm run build --workspaces --if-present",
        "test-coverage-html": "npm run test-coverage-html --workspaces --if-present",
        "make-badges": "npm run make-badges --workspaces --if-present",
        "concat-md-docs": "npm run concat-md --workspace=sg-utilities -- --input ./README_MONOREPO_ROOT.md ./packages/frontend/README.md ./packages/server/README.md ./packages/sg-utilities/README.md ./packages/desktop/README.md --output ./README.md",
        "generate-docs": "npm run test-coverage-html && npm run make-badges && npm run concat-md-docs",
        "pre-commit": "npm run tsc && npm run format && npm run format-check && npm run lint-fix && npm run lint && npm run build && npm run generate-docs"
    },
    "author": "Giuseppe Giulio Caponetto",
    "license": "MIT",
    "workspaces": [
        "packages/frontend",
        "packages/server",
        "packages/sg-utilities",
        "packages/desktop"
    ],
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@types/node": "^22.14.0",
        "@types/yargs": "^17.0.33",
        "@vitest/coverage-v8": "^3.1.1",
        "@vitest/ui": "^3.0.8",
        "concat-md": "^0.5.1",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "istanbul-badges-readme": "^1.9.0",
        "prettier": "3.5.3",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.29.0",
        "vitest": "^3.0.8"
    },
    "dependencies": {
        "sg-utilities": "^1.0.0",
        "chalk": "^5.4.1",
        "concurrently": "^9.1.2",
        "tsx": "^4.19.3",
        "uuid": "^11.1.0",
        "yargs": "^17.7.2"
    }
}
