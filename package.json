{
  "name": "streamglass",
  "version": "1.0.0",
  "description": "Streaming utilities for Twitch/OBS",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm run dev --workspace=frontend\" \"npm run start:socket-io --workspace=server\"",
    "lint": "npx eslint . && npm run lint --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test-coverage": "npm run test-coverage --workspaces --if-present",
    "make-badges": "npm run make-badges --workspaces --if-present",
    "concat-md-docs": "npm run concat-md --workspace=sg-utilities -- --input ./README_MONOREPO_ROOT.md ./packages/frontend/README.md ./packages/server/README.md ./packages/sg-utilities/README.md --output ./README.md",
    "generate-docs": "npm run test-coverage && npm run make-badges && npm run concat-md-docs"
  },
  "author": "Giuseppe Giulio Caponetto",
  "license": "MIT",
  "workspaces": [
    "packages/frontend",
    "packages/server",
    "packages/sg-utilities"
  ],
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.13.9",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^3.0.9",
    "@vitest/ui": "^3.0.7",
    "concat-md": "^0.5.1",
    "eslint": "^9.23.0",
    "istanbul-badges-readme": "^1.9.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "vitest": "^3.0.7"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.3",
    "yargs": "^17.7.2"
  }
}
