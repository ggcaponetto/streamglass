{
    "name": "desktop",
    "productName": "desktop",
    "version": "1.0.0",
    "description": "StreamGlass Desktop App is an application to fully customize your streaming workflow enabling remote desktop controlling.",
    "main": ".vite/build/main.js",
    "scripts": {
        "start": "node --env-file-if-exists=../../.env ../../node_modules/@electron-forge/cli/dist/electron-forge.js start",
        "start-production": "node --env-file-if-exists=../../.env-production ../../node_modules/@electron-forge/cli/dist/electron-forge.js start",
        "test": "vitest --config vitest.config.ts run",
        "test-coverage-html": "vitest run --coverage --reporter=html",
        "make-badges": "istanbul-badges-readme",
        "tsc": "tsc --noEmit",
        "package": "node --env-file-if-exists=../../.env ../../node_modules/@electron-forge/cli/dist/electron-forge.js package",
        "make": "npm run make-default",
        "print-env": "node --env-file-if-exists=../../.env-production -e \"console.log(process.env)\"",
        "make-default": "node --env-file-if-exists=../../.env-production ../../node_modules/@electron-forge/cli/dist/electron-forge.js make",
        "make-windows": "node --env-file-if-exists=../../.env-production ../../node_modules/@electron-forge/cli/dist/electron-forge.js make",
        "make-windows-on-wsl": "node --env-file-if-exists=../../.env-production ../../node_modules/@electron-forge/cli/dist/electron-forge.js make --platform=win32",
        "make-linux": "node --env-file-if-exists=../../.env-production ../../node_modules/@electron-forge/cli/dist/electron-forge.js make",
        "publish": "node --env-file-if-exists=../../.env-production ../../node_modules/@electron-forge/cli/dist/electron-forge.js publish",
        "prettier": "npx prettier src/**/*.{ts,tsx}",
        "lint": "eslint --config eslint.config.mjs"
    },
    "keywords": [],
    "author": {
        "name": "Giuseppe Caponetto",
        "email": "ggcaponetto@gmail.com"
    },
    "license": "MIT",
    "devDependencies": {
        "@electron-forge/cli": "^7.8.0",
        "@electron-forge/maker-deb": "^7.8.0",
        "@electron-forge/maker-rpm": "^7.8.0",
        "@electron-forge/maker-squirrel": "^7.8.0",
        "@electron-forge/maker-zip": "^7.8.0",
        "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
        "@electron-forge/plugin-fuses": "^7.8.0",
        "@electron-forge/plugin-vite": "^7.8.0",
        "@electron/fuses": "^1.8.0",
        "@types/electron-squirrel-startup": "^1.0.2",
        "@types/react": "^19.1.0",
        "@types/react-dom": "^19.1.2",
        "@typescript-eslint/eslint-plugin": "^8.29.1",
        "@typescript-eslint/parser": "^8.29.1",
        "electron": "35.1.5",
        "eslint-import-resolver-typescript": "^4.3.2",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-import-x": "^4.10.2",
        "ts-node": "^10.9.2",
        "vite": "^6.2.6"
    },
    "dependencies": {
        "@radix-ui/colors": "^3.0.0",
        "@radix-ui/react-icons": "^1.3.2",
        "@radix-ui/themes": "^3.2.1",
        "electron-squirrel-startup": "^1.0.1",
        "i18next": "^24.2.3",
        "qrcode.react": "^4.2.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-i18next": "^15.4.1",
        "socket.io-client": "^4.8.1"
    }
}
